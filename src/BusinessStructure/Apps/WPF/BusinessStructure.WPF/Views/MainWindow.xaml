        </Rectangle>
        <Image Margin="29.525,177,0,-306.471" Source="/BusinessStructure.WPF;component/Gestionnaire_de_fichiers_Fluent_Design_Microsoft[1].png" Stretch="Fill" Grid.Column="1" Grid.Row="1" Visibility="Collapsed"/>
        <Frame x:Name="FrameNavigator" Source="/BusinessStructure.WPF;component/Views/Pages/LoginView.xaml" NavigationUIVisibility="Hidden" Grid.Column="1" Grid.RowSpan="2"/>

